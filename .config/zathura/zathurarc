map r reload
map p print
map i recolor
map J zoom out
map K zoom in
map R rotate

set adjust-open       "best-fit"

set pages-per-row 1

set font "Iosevka 12"
set scroll-full-overlap 0.01
set scroll-step 150
set zoom-min 10
set scroll-page-aware     "true"
set smooth-scroll         "true"
set guioptions            "sv"
set selection-clipboard   "clipboard"

set default-bg                  "#181616" # Background
set default-fg                  "#c5c9c5" # Foreground

set render-loading              true
set render-loading-fg           "#181616" # Background
set render-loading-bg           "#c5c9c5" # Foreground

set recolor-lightcolor          "#181616" # Background
set recolor-darkcolor           "#c5c9c5" # Foreground
